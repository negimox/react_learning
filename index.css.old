* {
  text-decoration: none;
  font-family: "IBM Plex Sans";
}
*:link,
*:visited {
  color: #4c566a;
}
*:hover {
  color: inherit;
}

.header {
  display: flex;
  justify-content: space-between;
  border-bottom: 4px solid black;
}

.header:hover {
  color: #2e3440;
}

.nav-items > ul {
  display: flex;
  list-style-type: none;
  font-size: 19px;
}
.nav-items > ul > li {
  padding: 10px;
  margin: 10px;
}
.logo {
  width: 100px;
}

.res-container {
  display: flex;
  flex-wrap: wrap;
}

.res-card {
  border-radius: 20px;
  transition: all 0.3s;
  position: relative;
  margin: 12px 12px 65px 12px;
  width: 350px;
  height: 395px;
}

.res-card:hover {
  transform: scale(0.97);
  cursor: pointer;
}

.res-information h4 {
  line-height: -22px;
}

.gradient {
  border-radius: 20px;
  height: 25%;
  width: 100%;
  display: inline-block;
  position: absolute;
  bottom: 45%;
  left: 0px;
  background-image: linear-gradient(to top, black, transparent);
}

.res-img {
  border-radius: 20px;
  width: 100%;
  height: 55%;
  object-fit: cover;
  display: block;
}

.gradient-text {
  display: inline-block;
  position: absolute;
  color: #f0f0f0;
  font-size: 24px;
  top: 20%;
  padding-left: 20px;
}

.filter-btn {
  cursor: pointer;
  margin-left: 10px;
}

.footer-container {
  display: flex;
  flex-wrap: wrap;
  background-color: darkgrey;
}

.footer-container > div {
  padding: 10px;
}

.shimmer-card {
  margin: 10px;
  border-radius: 4px;
  width: 350px;
  height: 395px;
  background-color: #f0f0f0;
}

.shimmer-container {
  display: flex;
  flex-wrap: wrap;
}

.login-button {
  padding: 0px 10px;
  background: #f0f0f0;
}

.filter {
  display: flex;

  margin: 10px;
}
.menu {
  margin: 40px;
}

.menu-restaurant-desc {
  padding-bottom: 20px;
}

.menu-information-single {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.menu-img {
  width: 148px;
  height: 126px;
  border-radius: 20px;
  margin-right: 20px;
}

.dotted-seprator {
  border: none;
  border-bottom: 1px dashed #d3d3d3;
}

.menu-desc {
  color: rgba(40, 44, 63, 0.75);
}

.styles_divider {
  margin: 20px 0;
  border-bottom: 0.5px solid #d3d3d3;
  height: 0.5px;
}

.styles_bold_divider {
  border-top: 15px solid #f1f1f6;
  margin-top: 40px;
  margin-bottom: 40px;
}

.menu-title {
  font-weight: bolder;
  letter-spacing: 2.5px;
}

.user-card {
  border: 2px solid;
  padding: 20px;
  margin: 40px;
}

.status {
  background-color: red; /* Green color, you can change it as needed */
  color: #fff;
  text-align: center;
  font-weight: bold;
  top: 0;
  left: 0;
  width: 100%;
  animation: fade-down 0.5s;
}

@keyframes fade-down {
  0% {
    opacity: 0%;
    transform: translateY(-30px) scaleY(0.1);
  }
  100% {
    opacity: 100%;
    transform: translateY(0px) scaleY(1);
  }
}

.status.closed {
  opacity: 0%;
  transform: translateY(30px) scale(0.1);
}
